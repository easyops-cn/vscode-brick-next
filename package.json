{
    "name": "vscode-brick-next",
    "displayName": "Brick Next Support",
    "description": "VS Code Extension for Brick Next, including placeholder syntax highlighting",
    "version": "0.3.4",
    "publisher": "weareoutman",
    "homepage": "https://github.com/easyops-cn/vscode-brick-next",
    "repository": {
        "type": "git",
        "url": "https://github.com/easyops-cn/vscode-brick-next"
    },
    "engines": {
        "vscode": "^1.24.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "brick",
        "next",
        "easyops"
    ],
    "contributes": {
        "grammars": [
            {
                "scopeName": "placeholder.injection.string.quoted.double",
                "path": "./syntaxes/injection-quoted-double.json",
                "injectTo": [
                    "source.json",
                    "source.yaml",
                    "source.ts"
                ]
            },
            {
                "scopeName": "placeholder.injection.string.quoted.single",
                "path": "./syntaxes/injection-quoted-single.json",
                "injectTo": [
                    "source.yaml",
                    "source.ts"
                ]
            },
            {
                "scopeName": "placeholder.injection.string.unquoted",
                "path": "./syntaxes/injection-unquoted.json",
                "injectTo": [
                    "source.yaml"
                ]
            },
            {
                "scopeName": "builtin.entity.injection.string.quoted.double",
                "path": "./syntaxes/builtin-entity.json",
                "injectTo": [
                    "source.json",
                    "source.yaml",
                    "source.ts"
                ]
            }
        ]
    },
    "scripts": {
        "release": "standard-version"
    },
    "devDependencies": {
        "standard-version": "^9.0.0"
    }
}
